{#{% trans_default_domain 'FOSUserBundle' %}#}
<div class="container">
    <div class="row">
        <div class="col-md-6 form-login">
            <div class="row">
                <div class="col-lg-12">
                    <h4>Inscription</h4>
                    <form id="inscription-form" action="{{ path('fos_user_registration_register') }}" {{ form_enctype(form) }} method="POST" role="form" name="formInscription">
                        <div class="form-group">
                            {{ form_row(form.nomUser) }}
                        </div>

                        <div class="form-group">
                            {{ form_row(form.prenomUser) }}
                        </div>

                        <div class="form-group">
                            {{ form_row(form.email) }}
                            <span ng-show="formInscription.email.$dirty && formInscription.email.$invalid">
                                Cette adresse est invalide.
                            </span>
                        </div>

                        <div class="form-group">
                            {{ form_row(form.plainPassword) }}
                        </div>
                        <div class="form-group">
                            {{ form_row(form.confirmationPassword) }}
                        </div>
                        {% if is_granted("ROLE_SUPER_ADMIN") %}
                            <div class="form-group">
                                {{ form_row(form.groups) }}
                            </div>
                        {% endif %}

                        <div class="form-group">
                            <div class="row">
                                <div class="col-sm-6 col-sm-offset-3">
                                    <input type="submit" name="register-submit" id="register-submit" tabindex="4" class="form-control btn btn-info" value="Enregistrer">
                                </div>
                            </div>
                        </div>
                        {{ form_row(form._token) }}
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>