{#{% trans_default_domain 'FOSUserBundle' %}#}
<div class="container">
    <div class="row">
        <div class="col-md-6 form-login">
            <div class="row">
                <div class="col-lg-12">
                    <h4>Inscription</h4>
                    <form id="inscription-form" action="{{ path('fos_user_registration_register') }}" {{ form_enctype(form) }} method="POST" role="form" name="formInscription">
                        <div class="form-group">
                            {{ form_row(form.nomUser,{'attr':{'ng-model': 'newUser.nomUser'}}) }}
                        </div>

                        <div class="form-group">
                            {{ form_row(form.prenomUser,{'attr':{'ng-model': 'newUser.prenomUser'}}) }}
                        </div>

                        <div class="form-group">
                            {{ form_row(form.email,{'attr':{'ng-model': 'newUser.email'}}) }}
                            <span ng-show="formInscription.email.$dirty && formInscription.email.$invalid">
                                Cette adresse est invalide.
                            </span>
                        </div>

                        <div class="form-group">
                            {{ form_row(form.plainPassword,{'attr':{'ng-model': 'newUser.password'}}) }}
                            <span ng-show="formInscription.password.$dirty && formInscription.password.$error.minlength">
                                La longueur est invalide
                            </span>
                        </div>
                        <div class="form-group">
                            {{ form_row(form.confirmationPassword,{'attr':{'ng-model': 'newUser.confirmationPassword'}}) }}
                            <span class="text-danger" ng-show="formInscription.confirmationPassword.$invalid">
                                Les deux password doivent etre identiques
                            </span>
                        </div>
                        <div class="form-group">
                            <div class="row">
                                <div class="col-sm-6 col-sm-offset-3">
                                    <input type="submit" name="register-submit" id="register-submit" tabindex="4" class="form-control btn btn-info" value="Enregistrer">
                                </div>
                            </div>
                        </div>
                        {{ form_row(form._token) }}
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>